generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String   @id @default(cuid())
  email    String   @unique
  password String
  entries  Entry[]
}

model Entry {
  id             String          @id @default(cuid())
  fullName       String
  email          String
  platform       String          // GLOVO, TAZZ, BRINGO
  companyName    String?         // Nume Companie from import
  externalId     String?         // ID column from import
  totalTransfers Float?          // Total Venituri de transferat
  userId         String
  user           User            @relation(fields: [userId], references: [id])
  importSession  ImportSession?  @relation(fields: [importSessionId], references: [id])
  importSessionId String?
  salaryHistories SalaryHistory[]
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
}

model SalaryHistory {
  id        String   @id @default(cuid())
  amount    Float
  date      DateTime
  hours     Int
  net       Float
  entryId   String
  entry     Entry    @relation(fields: [entryId], references: [id])
  createdAt DateTime @default(now())
}

model ImportSession {
  id        String   @id @default(cuid())
  platform  String
  file      UploadedFile?
  entries   Entry[]
  createdAt DateTime @default(now())
}

model UploadedFile {
  id        String   @id @default(cuid())
  name      String
  url       String
  sessionId String   @unique
  session   ImportSession @relation(fields: [sessionId], references: [id])
}
