generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String       @id @default(uuid())
  email            String       @unique
  password         String
  role             String
  ownerId          String?      // null for admins; for employees, points to their adminâ€™s id

  // entries this user created (as employee or admin)
  entriesAsCreator Entry[]      @relation("creatorEntries")

  // entries this user owns (as an admin) 
  entriesAsAdmin   Entry[]      @relation("adminEntries")

  // invite links this admin created
  inviteLinks      InviteLink[] @relation("inviteLinks")
}

model Entry {
  id         String   @id @default(uuid())
  fullName   String
  salary     Float
  adminId    String
  createdBy  String
  createdAt  DateTime @default(now())

  admin      User     @relation("adminEntries", fields: [adminId], references: [id])
  creator    User     @relation("creatorEntries", fields: [createdBy], references: [id])
}

model InviteLink {
  id         String   @id @default(uuid())
  token      String   @unique
  adminId    String
  expiresAt  DateTime

  // relation back to the admin user
  admin      User     @relation("inviteLinks", fields: [adminId], references: [id])
}
